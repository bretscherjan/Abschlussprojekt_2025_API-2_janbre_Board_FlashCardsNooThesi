<Window x:Class="FlashCards.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BorderBrush="#dfaa30"
        BorderThickness="1"
        Title="Deck" Height="600" Width="800" Background="#2f2f2f">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Neue Row für Suchfeld -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header mit Titel -->
        <Border Grid.Row="0" Background="#252525" Padding="15">
            <TextBlock Text="Decks" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Suchfeld & AddButton -->
<Border Grid.Row="1" Background="#252525" Padding="10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/> <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="SearchBox" Grid.Column="0"
                 Width="300"
                 Height="30"
                 Margin="5"
                 TextChanged="SearchBox_TextChanged"
                 Background="#3f3f3f"
                 Foreground="White"
                 BorderBrush="#dfaa30"
                 Padding="5"/>
                <Button Cursor="Hand" Content="Suchen" Grid.Column="1"
                Width="80"
                Height="30"
                Margin="5"
                Click="SearchButton_Click"
                Background="#dfaa30"
                Foreground="White"/>
                <Button Cursor="Hand" Content="Zurücksetzen" Grid.Column="2"
                Width="80"
                Height="30"
                Margin="5"
                Click="ResetButton_Click"
                Background="#dfaa30"
                Foreground="White"/>
                <Button Cursor="Hand" Content="Neues Deck" Grid.Column="4"
                Width="80"
                Height="30"
                Margin="5"
                Click="AddDeckButton_Click"
                HorizontalAlignment="Right"
                Background="#dfaa30"
                Foreground="White"/>
    </Grid>
</Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="5">
            <ItemsControl ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Cursor="Hand" Margin="5" Padding="10" Click="DeckButton_Click" Tag="{Binding id}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="{Binding start_color}"/>
                                    <GradientStop Offset="1" Color="{Binding end_color}"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding title}" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding alt}" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding id, StringFormat='ID: {0}'}" Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding is_private, StringFormat='Private: {0}'}" Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding created_at, StringFormat='Created: {0}'}" Foreground="White" Margin="0,0,0,5"/>
                            </StackPanel>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Cursor="Hand" Header="Delete this Deck" Click="DeleteDeck_Click" Tag="{Binding id}"/>
                                    <MenuItem Cursor="Hand" Header="Import/Export Cards" Click="ImpExpCardsDeck_Click" Tag="{Binding id}"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>