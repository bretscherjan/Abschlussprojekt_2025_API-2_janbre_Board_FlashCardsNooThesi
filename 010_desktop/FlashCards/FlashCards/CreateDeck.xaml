<Window x:Class="FlashCards.CreateDeck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashCards"
        mc:Ignorable="d"
        Background="#2f2f2f"
        Title="Create New Deck" 
        Height="640" 
        Width="478"
        BorderBrush="#dfaa30"
        BorderThickness="1">
    <!-- WindowStyle="None" -->


    <Window.Resources>
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    </Window.Resources>

    <Grid>


        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="5">
            <ItemsControl ItemsSource="{Binding}">
                <!-- Main Content -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                           Text="Create a new Deck"
                           Foreground="#dfaa30"
                           FontSize="24"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                    <!-- Form Container -->
                    <Border Grid.Row="1"
                        Background="#252525"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="#3a3a3a"
                        BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Deck Title -->
                            <TextBlock Grid.Row="0"
                                   Text="Deck title"
                                   Foreground="#e0e0e0"
                                   FontSize="16"
                                   Margin="0,0,0,8"/>

                            <TextBox Grid.Row="1"
                                 Height="40"
                                 Padding="10"
                                 Background="#3a3a3a"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 x:Name="title">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#dfaa30"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#dfaa30"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Deck alt -->
                            <TextBlock Grid.Row="2"
                                   Text="Beschreibung"
                                   Foreground="#e0e0e0"
                                   FontSize="16"
                                   Margin="0,0,0,8"/>

                            <TextBox Grid.Row="3"
                                 Height="40"
                                 Padding="10"
                                 Background="#3a3a3a"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 x:Name="alt">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#dfaa30"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#dfaa30"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Color Picker Section -->
                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Deck color: "
                                       Foreground="#e0e0e0"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>

                                <Button Content="Choose first color" 
                                    Width="120" 
                                    Height="30" 
                                    Margin="15,0,0,0" 
                                    Click="PickFirstColorButton_Click" 
                                    Background="#dfaa30" 
                                    Foreground="#2f2f2f"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"/>
                                <Rectangle Fill="{Binding FirstColor, Converter={StaticResource ColorToBrushConverter}}" Width="20" Height="20" Margin="5"/>

                                <Button Content="Choose second color" 
                                    Width="120" 
                                    Height="30" 
                                    Margin="15,0,0,0" 
                                    Click="PickSecondColorButton_Click" 
                                    Background="#dfaa30" 
                                    Foreground="#2f2f2f"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"/>
                                <Rectangle Fill="{Binding SecondColor, Converter={StaticResource ColorToBrushConverter}}" Width="20" Height="20" Margin="5"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="5" Orientation="Vertical" Margin="0,20,0,0">
                                <Button Content="CREATE DECK"
                                    Background="#dfaa30"
                                    Foreground="#2f2f2f"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Height="50"
                                    Margin="0,0,0,10"
                                    BorderThickness="0"
                                    Click="CreateDeckHomeButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e8b43c"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="CANCEL"
                                    Background="Transparent"
                                    Foreground="#a0a0a0"
                                    FontSize="14"
                                    Height="40"
                                    Margin="0,15,0,0"
                                    BorderThickness="0"
                                    Click="BackButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#dfaa30"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

            </ItemsControl>
        </ScrollViewer>
    </Grid>

</Window>
    