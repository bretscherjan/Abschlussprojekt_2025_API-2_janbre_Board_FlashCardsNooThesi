<Window x:Class="FlashCards.LearnDeck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BorderBrush="#dfaa30"
        BorderThickness="1"
        Title="Deck" Height="600" Width="800" Background="#2f2f2f">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="59.6"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header bleibt gleich -->
        <Border Grid.Row="0" Background="#252525" Padding="15" Margin="3,3,3,3">
            <TextBlock Text="Cards" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Panel für den Lernmodus -->
        <Grid x:Name="LearningPanel" Grid.Row="2" Visibility="Collapsed" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Fortschrittsanzeige -->
            <TextBlock x:Name="ProgressTextBlock" Grid.Row="0" Text="1 / 10" 
                       Foreground="#dfaa30" FontSize="14" HorizontalAlignment="Right"/>

            <!-- Frage -->
            <Border Grid.Row="1" BorderBrush="#dfaa30" BorderThickness="1" CornerRadius="6" 
                    Background="#252525" Padding="20" Margin="0,10,0,20">
                <TextBlock x:Name="QuestionTextBlock" Text="Frage erscheint hier" 
                           FontSize="18" Foreground="#dfaa30" TextWrapping="Wrap"/>
            </Border>

            <!-- Antwort-Eingabe für normale Karten -->
            <StackPanel x:Name="AnswerInputPanel" Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
                <TextBox x:Name="AnswerTextBox" Background="#252525" Foreground="#e0e0e0" 
                         BorderBrush="#dfaa30" FontSize="16" Padding="10"/>
                <Button Cursor="Hand" x:Name="SubmitAnswerButton" Content="Antwort überprüfen" 
                        Background="#dfaa30" Foreground="#2f2f2f" FontWeight="Bold"
                        Margin="0,10,0,0" Height="40" Click="SubmitAnswerButton_Click"/>
            </StackPanel>

            <!-- Quiz-Optionen -->
            <StackPanel x:Name="QuizOptionsPanel" Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
                <Button Cursor="Hand" x:Name="Option1Button" Tag="1" Margin="0,5" Padding="10" 
                        Background="#3b3b3b" Foreground="#e0e0e0" FontSize="14"
                        Click="QuizOptionButton_Click"/>
                <Button Cursor="Hand" x:Name="Option2Button" Tag="2" Margin="0,5" Padding="10" 
                        Background="#3b3b3b" Foreground="#e0e0e0" FontSize="14"
                        Click="QuizOptionButton_Click"/>
                <Button Cursor="Hand" x:Name="Option3Button" Tag="3" Margin="0,5" Padding="10" 
                        Background="#3b3b3b" Foreground="#e0e0e0" FontSize="14"
                        Click="QuizOptionButton_Click"/>
                <Button Cursor="Hand" x:Name="Option4Button" Tag="4" Margin="0,5" Padding="10" 
                        Background="#3b3b3b" Foreground="#e0e0e0" FontSize="14"
                        Click="QuizOptionButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Back Button -->
        <Border Grid.Row="4" Background="#252525" Padding="10">
            <Button Cursor="Hand" x:Name="Back" Content="Back" Click="BackButton_Click" 
                    Background="#3a3a3a" Foreground="#dfaa30" FontSize="16" 
                    FontWeight="Bold" Height="50" BorderThickness="1" BorderBrush="#555"/>
        </Border>
    </Grid>
</Window>