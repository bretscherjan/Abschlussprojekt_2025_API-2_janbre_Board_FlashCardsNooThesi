<Window x:Class="FlashCards.LearnDeck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlashCards"
        BorderBrush="#dfaa30"                                                                
        BorderThickness="1"
        Title="Learn Deck" Height="600" Width="800" Background="#2f2f2f">
    <Window.Resources>
        <local:TypeConverter x:Key="TypeConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252525" Padding="15" Margin="3,3,3,3">
            <TextBlock Text="Learn Deck" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Progress -->
        <Border Grid.Row="1" Background="#252525" Padding="10" Margin="3,0,3,3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding CurrentCardDisplayIndex, StringFormat='Card {0}'}" 
                           FontSize="14" 
                           Foreground="#e0e0e0"
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding TotalCards, StringFormat='of {0}'}" 
                           FontSize="14" 
                           Foreground="#e0e0e0"/>
            </StackPanel>
        </Border>

        <!-- Card Content -->
        <Border Grid.Row="2" Margin="10" Padding="12" Background="#252525" BorderBrush="#dfaa30" BorderThickness="1" CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Question -->
                <TextBlock Grid.Row="0" 
                           Text="{Binding CurrentCard.question}" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="#dfaa30"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"/>

                <!-- Answer Input -->
                <StackPanel Grid.Row="1">
                    <TextBox x:Name="AnswerInput" 
                             FontSize="14" 
                             Foreground="#e0e0e0" 
                             Background="#3f3f3f" 
                             BorderBrush="#dfaa30" 
                             BorderThickness="1"
                             Padding="5"
                             TextWrapping="Wrap"
                             Visibility="{Binding CurrentCard.type, Converter={StaticResource TypeConverter}, ConverterParameter=card}"/>

                    <!-- Quiz Options -->
                    <StackPanel Visibility="{Binding CurrentCard.type, Converter={StaticResource TypeConverter}, ConverterParameter=quiz}">
                        <RadioButton x:Name="Option1" Content="{Binding CurrentCard.first_option}" 
                                     GroupName="QuizOptions" 
                                     FontSize="14" 
                                     Foreground="#e0e0e0" 
                                     Margin="0,5,0,5"/>
                        <RadioButton x:Name="Option2" Content="{Binding CurrentCard.second_option}" 
                                     GroupName="QuizOptions" 
                                     FontSize="14" 
                                     Foreground="#e0e0e0" 
                                     Margin="0,5,0,5"/>
                        <RadioButton x:Name="Option3" Content="{Binding CurrentCard.third_option}" 
                                     GroupName="QuizOptions" 
                                     FontSize="14" 
                                     Foreground="#e0e0e0" 
                                     Margin="0,5,0,5"/>
                        <RadioButton x:Name="Option4" Content="{Binding CurrentCard.fourth_option}" 
                                     GroupName="QuizOptions" 
                                     FontSize="14" 
                                     Foreground="#e0e0e0" 
                                     Margin="0,5,0,5"/>
                    </StackPanel>
                </StackPanel>

                <!-- Feedback and Submit -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock x:Name="FeedbackText" 
                               FontSize="14" 
                               Foreground="#dfaa30" 
                               Margin="0,0,10,0" 
                               Visibility="Collapsed"/>
                    <Button Content="Submit" 
                            Background="#dfaa30" 
                            Foreground="#2f2f2f" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Padding="10,5" 
                            BorderThickness="0" 
                            Click="SubmitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Back Button -->
        <Border Grid.Row="3" Background="#252525" Padding="10">
            <Button Content="Back" 
                    Background="#dfaa30" 
                    Foreground="#2f2f2f" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Height="50" 
                    Margin="0,0,0,10" 
                    BorderThickness="0" 
                    Click="BackButton_Click"/>
        </Border>
    </Grid>
</Window>