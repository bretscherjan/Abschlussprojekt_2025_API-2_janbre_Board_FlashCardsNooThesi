<Window x:Class="FlashCards.AddCards" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:FlashCards"
    mc:Ignorable="d" Title="Create New Deck" Height="640" Width="478" Background="#2f2f2f" BorderBrush="#dfaa30"
    BorderThickness="1">

    <Window.Resources>

        <!-- Template für normale Karte -->
        <DataTemplate DataType="{x:Type local:Card}">
            <Border Background="#1f1f1f" CornerRadius="8" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Card" FontWeight="Bold" Foreground="LightGray" Margin="0,0,0,5" />
                    <TextBlock Text="Question" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Question, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <TextBlock Text="Answer" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Answer, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <Button Content="Remove Card" Click="RemoveCard_Click" Background="#ff4d4d" Foreground="#2f2f2f"
                        FontSize="16" FontWeight="Bold" Height="50" Margin="0,10,0,10" BorderThickness="0" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Template für Quiz-Karte -->
        <DataTemplate DataType="{x:Type local:QuizCard}">
            <Border Background="#1f1f1f" CornerRadius="8" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Quiz" FontWeight="Bold" Height="50" Foreground="LightGray" Margin="0,0,0,5" />
                    <TextBlock Text="Quiz Question" Height="50" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Question, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <TextBlock Text="Option 1" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Option1, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <TextBlock Text="Option 2" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Option2, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <TextBlock Text="Option 3" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Option3, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <TextBlock Text="Option 4" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding Option4, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <TextBlock Text="Correct Option Index (1–4)" Foreground="#dfaa30" FontSize="16" Margin="0,0,0,8" />
                    <TextBox Text="{Binding CorrectIndex, UpdateSourceTrigger=PropertyChanged}" Height="40" Padding="10"
                        Background="#3a3a3a" Foreground="White" BorderBrush="#555" BorderThickness="1"
                        VerticalContentAlignment="Center" FontSize="14" />

                    <Button Content="Remove Quiz" Click="RemoveCard_Click" Background="#ff4d4d" Foreground="#2f2f2f"
                        FontSize="16" FontWeight="Bold" Height="50" Margin="0,10,0,10" BorderThickness="0" />
                </StackPanel>
            </Border>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Action Buttons -->
            <RowDefinition Height="*" />
            <!-- Scrollable Cards -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create new Cards" Foreground="#dfaa30" FontSize="24" FontWeight="SemiBold"
            HorizontalAlignment="Center" Margin="0,20,0,10" />

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20,0,20,10">
            <Button Content="Add a new Card" Background="#dfaa30" Foreground="#2f2f2f" FontSize="16" FontWeight="Bold"
                Height="50" Margin="0,0,0,10" BorderThickness="0" Click="CreateCardButton_Click" />

            <Button Content="Add a new Quiz" Background="#dfaa30" Foreground="#2f2f2f" FontSize="16" FontWeight="Bold"
                Height="50" Margin="0,0,0,10" BorderThickness="0" Click="CreateQuizButton_Click" />

            <Button Content="Save changes" Background="#3a3a3a" Foreground="#dfaa30" FontSize="16" FontWeight="Bold"
                Height="50" BorderThickness="1" BorderBrush="#555" Margin="0,0,0,10" Click="SaveChangesButton_Click" />

            <Button Content="CANCEL" Background="Transparent" Foreground="#a0a0a0" FontSize="14" Height="40"
                BorderThickness="0" Click="BackButton_Click" />
        </StackPanel>

        <!-- Cards List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl ItemsSource="{Binding Cards}" />
        </ScrollViewer>
    </Grid>
</Window>