<Window x:Class="FlashCards.Deck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BorderBrush="#dfaa30"
        BorderThickness="1"
        Title="Deck" Height="600" Width="800" Background="#2f2f2f">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="59.6"/>
            <RowDefinition Height="Auto"/>
            <!-- Neue Row für Suchfeld -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header mit Titel -->
        <Border Grid.Row="0" Background="#252525" Padding="15" Margin="3,3,3,3">
            <TextBlock Text="Cards" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Suchfeld & Karten hinzufügen -->
        <Border Grid.Row="1" Background="#252525" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchBox" Grid.Column="0"
                 Width="300"
                 Height="30"
                 Margin="5"
                 TextChanged="SearchBox_TextChanged"
                 Background="#3f3f3f"
                 Foreground="White"
                 BorderBrush="#dfaa30"
                 Padding="5"/>
                <Button Cursor="Hand" Content="Suchen" Grid.Column="1"
                Width="80"
                Height="30"
                Margin="5"
                Click="SearchButton_Click"
                Background="#dfaa30"
                Foreground="White"/>
                <Button Cursor="Hand" Content="Zurücksetzen" Grid.Column="2"
                Width="80"
                Height="30"
                Margin="5"
                Click="ResetButton_Click"
                Background="#dfaa30"
                Foreground="White"/>
                <Button Cursor="Hand" Content="Karten hinzufügen" Grid.Column="4"
                Width="120"
                Height="30"
                Margin="5"
                Click="AddCardButton_Click"
                HorizontalAlignment="Right"
                Background="#dfaa30"
                Foreground="White"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="5" Margin="0,0,0,20">
            <ItemsControl ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#dfaa30" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Margin="10" 
                                Padding="12" 
                                Background="#252525">
                            <StackPanel>
                                <!-- Frage -->
                                <TextBlock Text="{Binding question}" 
                                           FontWeight="Bold" 
                                           FontSize="16" 
                                           Foreground="#dfaa30"
                                           Margin="0,0,0,5"/>

                                <!-- Antwort (nur für Karten vom Typ 'card') -->
                                <TextBlock Text="{Binding answer}" 
                                           Margin="0,6,0,0" 
                                           FontSize="14" 
                                           Foreground="#e0e0e0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding type}" Value="quiz">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Quiz-Optionen (nur für Karten vom Typ 'quiz') -->
                                <StackPanel Margin="0,6,0,0">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding type}" Value="quiz">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <TextBlock Text="{Binding first_option}" 
                                               FontSize="14" 
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding correct_answer}" Value="1">
                                                        <Setter Property="Foreground" Value="#dfaa30"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding second_option}" 
                                               FontSize="14" 
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding correct_answer}" Value="2">
                                                        <Setter Property="Foreground" Value="#dfaa30"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding third_option}" 
                                               FontSize="14" 
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding correct_answer}" Value="3">
                                                        <Setter Property="Foreground" Value="#dfaa30"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding fourth_option}" 
                                               FontSize="14" 
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding correct_answer}" Value="4">
                                                        <Setter Property="Foreground" Value="#dfaa30"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Metadaten -->
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <TextBlock Text="Status: " 
                                               FontWeight="SemiBold" 
                                               Foreground="#dfaa30"/>
                                    <TextBlock Text="{Binding status}" 
                                               Foreground="#a0a0a0"/>
                                    <TextBlock Text="   |   " 
                                               Foreground="#555"/>
                                    <TextBlock Text="Favorit: " 
                                               FontWeight="SemiBold" 
                                               Foreground="#dfaa30"/>
                                    <TextBlock Text="{Binding is_fav}" 
                                               Foreground="#a0a0a0"/>
                                </StackPanel>

                                <!-- Erstellungsdatum -->
                                <TextBlock Text="{Binding created_at}" 
                                           FontSize="11" 
                                           Foreground="#555" 
                                           Margin="0,4,0,0"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Border Grid.Row="3" Background="#252525" Padding="10">
            <Button Cursor="Hand" x:Name="learn" Content="Learn this Deck" Background="#dfaa30" Foreground="#2f2f2f" FontSize="16" FontWeight="Bold" Height="50" BorderThickness="0"  Click="LearnButton_Click"/>
        </Border>
        <Border Grid.Row="4" Background="#252525" Padding="10">
            <Button Cursor="Hand" x:Name="Back" Content="Back" Click="BackButton_Click" Background="#3a3a3a" Foreground="#dfaa30" FontSize="16" FontWeight="Bold" Height="50" BorderThickness="1" BorderBrush="#555" />
        </Border>
    </Grid>
</Window>