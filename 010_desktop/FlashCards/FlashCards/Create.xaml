<Page x:Class="FlashCards.Create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#2f2f2f"
      Title="CreateDeckPage" Height="640" Width="478">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Create a new Deck"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,30"/>

        <Border Grid.Row="1"
                Background="#2f2f2f"
                CornerRadius="10"
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Direction="270" Color="Black" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Deck title"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,0,0,5"/>
                <TextBox Grid.Row="1"
                         Height="40"
                         Padding="10,0,0,0"
                         Background="#3a3a3a"
                         Foreground="White"
                         BorderBrush="#3a3a3a"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         FontSize="14"
                         Text="ex. Math, English..."/>
                <TextBlock Grid.Row="2"
                           Text="Pick a color:"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,20,0,10"/>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                    <Ellipse Width="30" Height="30" Fill="#8A2BE2" Margin="0,0,10,0"/>
                    <Ellipse Width="30" Height="30" Fill="#008000" Margin="0,0,10,0"/>
                    <Ellipse Width="30" Height="30" Fill="#FFD700" Margin="0,0,10,0"/>
                    <Ellipse Width="30" Height="30" Fill="#FF0000" Margin="0,0,10,0"/>
                    <Ellipse Width="30" Height="30" Fill="#A9A9A9" Margin="0,0,10,0"/>
                </StackPanel>

                <TextBlock Grid.Row="4"
                           Text="Each new deck automatically contains 3 sample cards."
                           Foreground="#A9A9A9"
                           FontSize="12"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,30"/>

                <StackPanel Grid.Row="5" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                    <Button Content="Create deck and go Home"
                            Background="#dfaa30"
                            Foreground="#2f2f2f"
                            FontSize="16"
                            Height="50"
                            Margin="0,0,0,15"/>
                    <Button Content="Create deck and add cards"
                            Background="#dfaa30"
                            Foreground="#2f2f2f"
                            FontSize="16"
                            Height="50"/>
                </StackPanel>
            </Grid>
        </Border>

        <Button Grid.Row="1"
                Content="cancel"
                Background="#dfaa30"
                Foreground="#2f2f2f"
                FontSize="16"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="200"
                Margin="0,428,0,0"/>

        <Border Grid.Row="3" Background="#2f2f2f" Height="60" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button >
                    <StackPanel>
                        <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" Fill="White" Width="24" Height="24"/>
                        <TextBlock Text="Home" Foreground="White" FontSize="10"/>
                    </StackPanel>
                </Button>
                <Button >
                    <StackPanel>
                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M17,13H13V17H11V13H7V11H11V7H13V11H17V13Z" Fill="White" Width="24" Height="24"/>
                        <TextBlock Text="Add" Foreground="White" FontSize="10"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <ControlTemplate x:Key="RoundTextBoxTemplate" TargetType="TextBox">
            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="5" SnapsToDevicePixels="True">
                <Grid>
                    <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                    <TextBlock x:Name="Placeholder" IsHitTestVisible="False" Text="{TemplateBinding Text}"
                               VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                               Margin="{TemplateBinding Padding}"
                               Foreground="{TemplateBinding Foreground}"
                               Opacity="0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </ControlTemplate>

        <Style x:Key="FooterNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="20,0"/>
        </Style>
    </Page.Resources>
</Page>