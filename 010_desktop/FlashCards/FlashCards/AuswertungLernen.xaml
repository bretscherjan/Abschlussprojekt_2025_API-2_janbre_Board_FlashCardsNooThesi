<Window x:Class="FlashCards.AuswertungLernen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BorderBrush="#dfaa30"
        BorderThickness="1"
        Title="Evaluation" Height="600" Width="800" Background="#2f2f2f">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252525" Padding="15" Margin="3,3,3,3">
            <TextBlock Text="Auswertung" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Results -->
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
            <TextBlock Text="{Binding CorrectCount, StringFormat='Correct Answers: {0}'}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       Margin="0,0,0,10"/>
            <TextBlock Text="{Binding IncorrectCount, StringFormat='Incorrect Answers: {0}'}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"
                       Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Percentage, StringFormat='Percentage: {0:F2}%'}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#dfaa30"/>
        </StackPanel>

        <!-- Back Button -->
        <Border Grid.Row="2" Background="#252525" Padding="10">
            <Button Content="Back to Deck" 
                    Background="#dfaa30" 
                    Foreground="#2f2f2f" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Height="50" 
                    Margin="0,0,0,10" 
                    BorderThickness="0" 
                    Click="BackButton_Click"/>
        </Border>
    </Grid>
</Window>