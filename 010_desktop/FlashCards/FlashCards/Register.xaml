<Window x:Class="FlashCards.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        BorderBrush="#dfaa30"
        BorderThickness="1"
        Title="Register" Height="550" Width="400" 
        Background="#2f2f2f"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252525" Padding="15">
            <TextBlock Text="Create an Account" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="#dfaa30"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Registration Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40,20">
            <!-- Username Field -->
            <StackPanel>
                <TextBlock Text="Username" 
                           Foreground="#dfaa30" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="username"
                         Background="#3a3a3a" 
                         Foreground="White" 
                         BorderBrush="#555" 
                         BorderThickness="1"
                         Height="40" 
                         Padding="10"
                         FontSize="14"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Email Field -->
            <StackPanel>
                <TextBlock Text="Email" 
                           Foreground="#dfaa30" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="email"
                         Background="#3a3a3a" 
                         Foreground="White" 
                         BorderBrush="#555" 
                         BorderThickness="1"
                         Height="40" 
                         Padding="10"
                         FontSize="14"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Password Field -->
            <StackPanel>
                <TextBlock Text="Password" 
                           Foreground="#dfaa30" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="first_pw"
                             Background="#3a3a3a" 
                             Foreground="White" 
                             BorderBrush="#555" 
                             BorderThickness="1"
                             Height="40" 
                             Padding="10"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Confirm Password Field -->
            <StackPanel>
                <TextBlock Text="Confirm Password" 
                           Foreground="#dfaa30" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="second_pw"
                             Background="#3a3a3a" 
                             Foreground="White" 
                             BorderBrush="#555" 
                             BorderThickness="1"
                             Height="40" 
                             Padding="10"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Register Button -->
            <Button Content="REGISTER" 
                    Background="#dfaa30" 
                    Foreground="#2f2f2f" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Height="50" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="RegisterButton_Click"
                    Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Footer Links -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Already have an account?" 
                       Foreground="#a0a0a0" 
                       VerticalAlignment="Center"/>
            <Button Content="Login" 
                    Background="Transparent" 
                    Foreground="#dfaa30" 
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="LoginButton_Click"
                    Margin="10,0,0,0"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>